  "version": "1.0.0",
  "description": "A service for managing user invoices.",
  "main": "src/index.ts",
  "scripts": {
    "start": "node .",
    "start:dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "test": "jest",
